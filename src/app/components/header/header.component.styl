@import '../../../assets/stylus/colors.styl';

[data-component="header"]
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  width 100%
  height 72px
  background $black-gradient
  padding 0 40px
  .teste
    display flex
    flex-direction row
    align-items center
    img
      width 112px
      height 30px
    ul
      display flex
      flex-direction row
      margin-left 20px 
      padding 0
      list-style-type none
      li
        color $white
        margin 0 10px
        position relative
        cursor pointer
        &::before
          content ''
          display block
          width 0
          height 1px
          transition 0.3s ease-in-out
          background-color $red
          position absolute
          bottom -1px
          left 0
        &:hover
          &::before
            width 100%
