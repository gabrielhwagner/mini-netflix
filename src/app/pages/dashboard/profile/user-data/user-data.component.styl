@import '../../../../../assets/stylus/colors.styl';
@import '../../../../../assets/stylus/media-queries.styl';

[data-component="user-data"]
  background-color transparent
  margin-top 20px
  .container
    display flex
    .photo
      width 200px
      height 200px
      img
        width 100%
        height 100%
        border-radius 50%
    .content
      display flex
      flex-direction column
      justify-content center
      padding-left 20px
      ul
        list-style-type none
        li
          color $white
          font-size 20px
          margin-bottom 7px
          span
            margin-right 10px
            font-size 16px
    


